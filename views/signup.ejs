<!DOCTYPE html>
<html>
	<head>
		<!-- STYLES -->
		<link rel="stylesheet" type="text/css" href="/styles/foundation.css">
		<link rel="stylesheet" type="text/css" href="/styles/importer.css">
		<link rel="stylesheet" type="text/css" href="/styles/app.css">
		<!-- STYLES END -->
		<title></title>
	</head>
	<body ng-app="signupMod" ng-controller="signupCtrl">
		<div class="large-4 large-centered columns">
	      <div class="signup-box">
	        <div class="row">
	          <div class="large-12 columns">
	            <h2 class="text-center">
	              UserAuth
	            </h2>
	            <p>Please fill in the fields below to signup</p>
	            <form ng-submit="runSignup()">
	               <div class="row">
	                 <div class="large-12 columns">
	                     <input ng-model="name" ng-maxlength="40" type="text" name="name" placeholder="Name" required />
	                 </div>
	               </div>
	                <div class="row">
	                 <div class="large-12 columns">
	                     <input type="email" placeholder="Email Address" name="email" ng-model="email" required >
	                 </div>
	               </div>
	              <div class="row">
	                 <div class="large-12 columns">
	                     <input ng-model="password" ng-maxlength="20" type="password" name="password" placeholder="Password" required />
	                 </div>
	              </div>
	               <div class="row">
	                 <div class="large-12 columns">
	                     <input ng-model="password2" ng-maxlength="20" type="password" name="password2" placeholder="Password Confirm" required />
	                 </div>
	              </div>
	              <div class="row">
	                <div class="large-7 columns">
	                  <input type="submit" class="button expand" value="Create Account"/>
	                </div>
	                <div class="large-5 columns">
	                 <a class="button expand">Log In</a>
	                </div>
	              </div>
	            </form>
	          </div>
	        </div>
	      </div>
	    </div>
	<!-- SCRIPTS -->
	<script type="/js/dependencies/sails.io.js"></script>
	<script type="/js/dependencies/bower_components/jquery/dist/jquery.js"></script>
	<script type="/js/dependencies/bower_components/angular/angular.js"></script>
	<script type="/js/dependencies/foundation.min.js"></script>
	<script type="/js/public/signup/signupCtrl.js"></script>
	<script type="/js/public/signup/signupMod.js"></script>
	<!-- SCRIPTS END -->
	</body>
</html>